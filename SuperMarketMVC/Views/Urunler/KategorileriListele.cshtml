@using SuperMarketMVC.Models
@model List<TBLKATEGORİLER>

@{
    ViewBag.Title = "KategorileriListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #d8d0d0;
    }
    table td {
        font-size: small;
        height: auto;
        background-color: #ffffff;
        width: auto;
        border-radius: 10px 5px;
    }

    img {
        width: 250px;
        height: 250px;
        text-align: center;
        margin: 0 auto;
        display: block;
    }
    h3{
        text-align:center;
    }
</style>

<h2>Kategoriler</h2>



<body>
    <table class="table table-bordered">
        @for (int i = 0; i < Model.Count; i = i + 3)
        {
            <tr class="container">
                <td class="card">
                    <div class="category-image">
                        <a href="/Urunler/KategoriDetay/@Model[i].KATEGORIID/"><img src="@Model[i].KATEGORIRESIM" /></a>
                    </div>
                    <div class="category-info">
                        <h3>@Model[i].KATEGORIAD</h3>
                    </div>
                </td>
                @if (Model.Count >= i + 2)
                {
                    <td class="card">
                        <div class="category-image">
                            <a href="/Urunler/KategoriDetay/@Model[i+1].KATEGORIID/"><img src="@Model[i+1].KATEGORIRESIM" /></a>
                        </div>
                        <div class="cagetory-info">
                            <h3>@Model[i + 1].KATEGORIAD</h3>
                        </div>
                    </td>
                } @if (Model.Count >= i + 3)
                {
                    <td class="card">
                        <div class="cagetory-image">
                            <a href="/Urunler/KategoriDetay/@Model[i+2].KATEGORIID/"><img src="@Model[i+2].KATEGORIRESIM" /></a>
                        </div>
                        <div class="cagetory-info">
                            <h3>@Model[i + 2].KATEGORIAD</h3>
                        </div>
                    </td>
                }
            </tr>
        }
    </table>
</body>

